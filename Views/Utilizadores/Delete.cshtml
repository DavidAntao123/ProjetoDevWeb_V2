@model ProjetoDevWeb_V2.Models.Utilizadores

@{
    ViewData["Title"] = "Remover User";
}

<html style="background-color: #8332ac; color: white; font-weight: bold; min-height: 100vh;">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/EstiloGlobal.css" rel="stylesheet" />
</head>
<body style="background-color: #8332ac;">

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" style="background-color: #462749 !important;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white display-6" style="text-shadow: 0 0 8px #ffffff60;">
                <i class="bi bi-person-x-fill me-2"></i> Confirmar
            </h2>
            <a asp-action="Index" class="btn btn-outline-light btn-lg shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>

        <h5 class="text-danger mb-4">De certeza que Ã© para apagar este user?</h5>

        <dl class="row text-white fs-5">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">IdentityUser</dt>
            <dd class="col-sm-9">@Model.IdentityUserName</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash-fill me-1"></i> Remover
                </button>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

</body>
</html>