@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjetoDevWeb_V2.Models.Musicas

@{
    ViewData["Title"] = "Criar Musica";
   

}


<html style="background-color: #8332ac; color: white; font-weight: bold; min-height: 100vh;">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/EstiloGlobal.css" rel="stylesheet" />
</head>
<body style="background-color: #8332ac;">

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" style="background-color: #462749 !important;">
        <h2 class="text-white mb-4" style="text-shadow: 0 0 8px #ffffff60;">
            <i class="bi bi-music-note-beamed me-2"></i> Criar Música
        </h2>

        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3" style="color: white; font-weight: bold;">
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Título</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Link" class="form-label">Link</label>
                    <input asp-for="Link" class="form-control" />
                    <span asp-validation-for="Link" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MediaFK" class="form-label">Media</label>
                    <select asp-for="MediaFK" class="form-select" asp-items="ViewBag.MediaFK"></select>
                    <span asp-validation-for="MediaFK" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Criar Música
                </button>
            </div>
        </form>
    </div>
</div>

</body>
</html>