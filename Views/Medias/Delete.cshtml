@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjetoDevWeb_V2.Models.Medias

@{
    ViewData["Title"] = "Remover Media";
}
@{

    if (@User.FindFirst(ClaimTypes.NameIdentifier)?.Value != "admin")
    {

        <script>
            window.location.href = '@Url.Action("Index", "Home")';

        </script>

    }
}
<html >
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/EstiloGlobal.css" rel="stylesheet"></link>

    </head>
<body >

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" >
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white display-6" >
                <i class="bi bi-trash3-fill me-2"></i> Confirmar 
            </h2>
            <a asp-action="Index" class="btn btn-outline-light btn-lg shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>

        <h5 class="text-danger">De certeza que é para apagar este Media?</h5>

        <dl class="row text-white fs-5 mt-4">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Idade Mínima</dt>
            <dd class="col-sm-9">@Model.Midade?.Idade</dd>

            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">@Model.Genero?.Nome</dd>

            <dt class="col-sm-3">Tipo de Media</dt>
            <dd class="col-sm-9">@Model.TipoMedia?.Nome</dd>

            <dt class="col-sm-3">Temporadas</dt>
            <dd class="col-sm-9">@Model.Temporadas</dd>

            <dt class="col-sm-3">Episódios</dt>
            <dd class="col-sm-9">@Model.Episodios</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor?.Nome</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash-fill me-1"></i> Apagar
                </button>
                <a asp-action="Index" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-x-circle me-1"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

</body>
</html>
