@model ProjetoDevWeb_V2.Models.Medias

@{
    ViewData["Title"] = "Create Media";
}

<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/EstiloGlobal.css" rel="stylesheet"/>
</head>
<body>

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" >
        <h2 class="text-white mb-4">
            <i class="bi bi-plus-circle me-2"></i> Create New Media
        </h2>

        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3" >
                <div class="col-md-6">
                    <label asp-for="Titulo" class="form-label">Title</label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Descricao" class="form-label">Description</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="MidadeFk" class="form-label">Age Rating</label>
                    <select asp-for="MidadeFk" class="form-select" asp-items="ViewBag.MidadeFk"></select>
                </div>

                <div class="col-md-4">
                    <label asp-for="GeneroFk" class="form-label">Genre</label>
                    <select asp-for="GeneroFk" class="form-select" asp-items="ViewBag.GeneroFk"></select>
                </div>

                <div class="col-md-4">
                    <label asp-for="TipoMediaFk" class="form-label">Formato</label>
                    <select asp-for="TipoMediaFk" class="form-select" asp-items="ViewBag.TipoMediaFk"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="Temporadas" class="form-label">Seasons</label>
                    <input asp-for="Temporadas" class="form-control" />
                    <span asp-validation-for="Temporadas" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Episodios" class="form-label">Episodes</label>
                    <input asp-for="Episodios" class="form-control" />
                    <span asp-validation-for="Episodios" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="AutorFk" class="form-label">Author</label>
                    <select asp-for="AutorFk" class="form-select" asp-items="ViewBag.AutorFk"></select>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Save Media
                </button>
            </div>
        </form>
    </div>
</div>

</body>
</html>
