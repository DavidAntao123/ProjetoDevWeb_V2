@model ProjetoDevWeb_V2.ViewModels.MediaFotografias
@model ProjetoDevWeb_V2.Models.
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Media Gallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .media-card {
            transition: all 0.3s ease;
            margin-bottom: 30px;
            border: none;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            border-radius: 8px;
            overflow: hidden;
        }
        .media-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }
        .media-img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
        .media-header {
            padding: 20px;
            border-bottom: 1px solid #eee;
        }
        .media-body {
            padding: 20px;
        }
        .photo-thumbnail {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 4px;
            margin-right: 10px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .photo-thumbnail:hover {
            transform: scale(1.05);
        }
        .page-header {
            margin-bottom: 40px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }


    </style>
</head>
<body>
<div class="container py-5">
    <div class="page-header">
        <h1 class="display-4 text-center">Todos so Medias !</h1>
    </div>
    <p>
        <a class="btn btn-primary filter-btn" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
            Acao
        </a>
        <a class="btn btn-primary filter-btn" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
            Aventura
        </a>
        <a class="btn btn-primary filter-btn" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
            Comédia
        </a>

        <a class="btn btn-primary filter-btn" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
            Romance
        </a>

        <a class="btn btn-primary filter-btn" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false">
            Documentário
        </a>


    </p>

    <div id="selectedFilter" class="alert alert-info mt-3">Selected: None</div>


    <div class="collapse" id="collapseExample">
        <div class="row">
            @foreach (var media in Model.Medias)
            {
                var relatedFotos = Model.Fotografias
                    .Where(f => f.MediaFK == media.Id && f.Publico == 1)
                    .OrderBy(f => Guid.NewGuid())
                    .Take(5)
                    .ToList();


                <div  class="col-lg-6 mb-4 genero'@media.GeneroFk'" style="display: block" >
                    <div class="media-card h-100">
                        <div class="media-header">
                            <h3 class="h4">@media.Titulo</h3>
                            
                        </div>

                        @if (relatedFotos.Any())
                        {
                            <img src="~/@relatedFotos.First().Ficheiro"
                                 alt="@relatedFotos.First().Descricao"
                                 class="media-img">
                        }

                        <div class="media-body">
                            <p class="text-muted">@media.Descricao</p>
                            <div>
                                @{
                                    var user  = Model
                                        .Where(u => u.)
                                      
                                }
                            </div>
                            <div class="d-flex flex-wrap">
                                @foreach (var foto in relatedFotos)
                                {
                                    <img src="~/@foto.Ficheiro"
                                         alt="@foto.Descricao"
                                         class="photo-thumbnail"
                                         data-toggle="tooltip"
                                         title="@foto.Descricao">
                                }
                            </div>
                            <form method="post" action="">
                                <button type="submit">
                                    <i class="fa-regular fa-thumbs-up fa-2xl" onclick="like(this)"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

               
            }
        </div>

    </div>



</div>


</body>
</html>
<script>
    

    $(document).ready(function() {
