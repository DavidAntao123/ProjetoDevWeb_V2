@model ProjetoDevWeb_V2.Models.Medias

@{
    ViewData["Title"] = "Detalhes Media";
}

<html style="background-color: #8332ac; color: white; font-weight: bold; min-height: 100vh;">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/EstiloGlobal.css" rel="stylesheet"></link>

    </head>
<body >

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" style="background-color: #462749 !important;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-white display-6" style="text-shadow: 0 0 8px #ffffff60;">
                <i class="bi bi-info-circle-fill me-2"></i>Detalhes 
            </h2>
            <a asp-action="Index" class="btn btn-outline-light btn-lg shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Voltar
            </a>
        </div>

        <dl class="row text-white fs-5">
            <dt class="col-sm-3">Título</dt>
            <dd class="col-sm-9">@Model.Titulo</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Descricao</dd>

            <dt class="col-sm-3">Idade Mínima</dt>
            <dd class="col-sm-9">@Model.Midade?.Idade</dd>

            <dt class="col-sm-3">Género</dt>
            <dd class="col-sm-9">@Model.Genero?.Nome</dd>

            <dt class="col-sm-3">Tipo de Media</dt>
            <dd class="col-sm-9">@Model.TipoMedia?.Nome</dd>

            <dt class="col-sm-3">Temporadas</dt>
            <dd class="col-sm-9">@Model.Temporadas</dd>

            <dt class="col-sm-3">Episódios</dt>
            <dd class="col-sm-9">@Model.Episodios</dd>

            <dt class="col-sm-3">Autor</dt>
            <dd class="col-sm-9">@Model.Autor?.Nome</dd>
        </dl>

        <div class="mt-4 d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning btn-lg">
                <i class="bi bi-pencil-square me-1"></i> Editar
            </a>
            <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger btn-lg">
                <i class="bi bi-trash me-1"></i> Remover
            </a>
        </div>
    </div>
</div>

</body>
</html>
