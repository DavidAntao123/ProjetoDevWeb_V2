@using System.Security.Claims
@model ProjetoDevWeb_V2.ViewModels.MediaFotografias


<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <title>Recomendações | Media Gallery</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #6f42c1;
            --secondary-color: #f8f9fa;
            --dark-color: #343a40;
        }

        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', system-ui, sans-serif;
        }

        .header {
            background: linear-gradient(135deg, var(--primary-color), #4e2d8c);
            color: white;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .media-card {
            transition: all 0.3s ease;
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 6px 15px rgba(0,0,0,0.08);
            background: white;
            margin-bottom: 2rem;
        }

        .media-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }

        .media-header {
            padding: 1.5rem;
            background-color: white;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .media-title {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .photo-card {
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .photo-card:hover {
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

        .photo-description {
            padding: 1.25rem;
            background: white;
            flex-grow: 1;
        }

        .badge-genre {
            background-color: var(--primary-color);
            font-weight: 500;
            font-size: 0.75rem;
            padding: 0.35em 0.65em;
        }

        .floating-btn {
            position: fixed;
            bottom: 30px;
            right: 30px;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 20px rgba(111, 66, 193, 0.3);
            z-index: 1000;
            transition: all 0.3s ease;
        }

        .floating-btn:hover {
            transform: translateY(-3px) scale(1.05);
            color: white;
        }
    </style>
</head>
<body>
<!-- Header Section -->
<div class="header py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="display-5 fw-bold mb-3">Recomendações</h1>
                <p class="lead mb-0">Os melhores medias do momento!</p>

            </div>
        </div>
    </div>
</div>

@{
    
    <br>    
        @User.FindFirstValue(ClaimsIdentity.DefaultRoleClaimType);
}   
<!-- Main Content -->
<div class="container pb-5">
    @{
        // Get 3 random media items
        var randomMedias = Model.Medias
            .OrderBy(m => Guid.NewGuid())
            .Take(5)
            .ToList();
    }

    @foreach (var media in randomMedias)
    {
        // Get 2 random photos for each media
        var relatedFotos = media.Fotos
            .OrderBy(f => Guid.NewGuid())
            .Take(2)
            .ToList();

        <div class="media-card">
            <div class="media-header">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h3 class="media-title">@media.Titulo</h3>
                        <span class="badge badge-genre mb-2">@media.Genero</span>
                    </div>
                </div>
                <p class="mb-0 text-muted">@media.Descricao</p>
            </div>

            <div class="row g-4 p-3">
                @foreach (var foto in relatedFotos)
                {
                    <div class="col-md-6">
                        <div class="photo-card shadow-sm">
                            <img src="~/@foto.Ficheiro"
                                 alt="@foto.Descricao"
                                 class="photo-img">
                            <div class="photo-description">
                                <p class="card-text mb-0">@foto.Descricao</p>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <small class="text-muted">@media.Titulo</small>
                       
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>




</body>
</html>