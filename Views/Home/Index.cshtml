@model List<Medias>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Home - Recommendations</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
<div class="container mt-5">
    <h1 class="mb-4">Recomendações</h1>
    <div class="row">

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning">Nenhuma recomendação encontrada.</div>
        }
        else
        {

            @foreach (var teste in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@teste.Titulo</h5>
                            <p class="card-text">@teste.Descricao</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
</body>
</html>
