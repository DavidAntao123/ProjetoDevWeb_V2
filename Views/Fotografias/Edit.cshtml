@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ProjetoDevWeb_V2.Models.Fotografias

@{
    ViewData["Title"] = "Editar Foto";
}
@{

    if (@User.FindFirst(ClaimTypes.NameIdentifier)?.Value != "admin")
    {

        <script>
            window.location.href = '@Url.Action("Index", "Home")';

        </script>

    }
}
<html style="background-color: #8332ac; color: white; font-weight: bold; min-height: 100vh;">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="css/EstiloGlobal.css" rel="stylesheet" />
</head>
<body style="background-color: #8332ac;">

<div class="container py-5">
    <div class="bg-dark rounded-4 shadow p-5" style="background-color: #462749 !important;">
        <h2 class="text-white mb-4" style="text-shadow: 0 0 8px #ffffff60;">
            <i class="bi bi-camera me-2"></i> Editar Foto
        </h2>

        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="row g-3" style="color: white; font-weight: bold;">
                <div class="col-md-6">
                    <label asp-for="Descricao" class="form-label">Descrição</label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MediaFK" class="form-label">Media</label>
                    <select asp-for="MediaFK" class="form-select" asp-items="ViewBag.MediaFK"></select>
                    <span asp-validation-for="MediaFK" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Ficheiro" class="form-label">Imagem URL</label>
                    <input asp-for="Ficheiro" class="form-control" />
                    <span asp-validation-for="Ficheiro" class="text-danger small"></span>
                    @if (!string.IsNullOrEmpty(Model.Ficheiro))
                    {
                        <div class="mt-2">
                            <img src="@Model.Ficheiro" style="max-width: 200px; max-height: 150px; border-radius: 4px;" class="img-thumbnail" />
                        </div>
                    }
                </div>

                <div class="col-md-6">
                    <label asp-for="Publico" class="form-label">Público</label>
                    <input asp-for="Publico" class="form-control" />
                    <span asp-validation-for="Publico" class="text-danger small"></span>
                </div>
            </div>

            <div class="mt-4 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                <button type="submit" class="btn btn-warning text-dark fw-semibold">
                    <i class="bi bi-save"></i> Salvar
                </button>
            </div>
        </form>
    </div>
</div>

</body>
</html>